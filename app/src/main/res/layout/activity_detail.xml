<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="86dp"
        android:layout_height="91dp"
        android:layout_alignStart="@+id/tvTime"
        android:layout_alignTop="@+id/tvUserName"
        app:srcCompat="@android:color/black"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="172dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tvUser"
        android:layout_alignStart="@+id/btnRetweet"
        android:layout_marginBottom="-40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="13dp" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnRetweet"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnReply"
        android:layout_marginBottom="226dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="346dp"
        android:layout_height="137dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="29dp"
        android:layout_marginTop="21dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="131dp" />

    <ImageButton
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnRetweet"
        android:layout_marginStart="21dp"
        app:srcCompat="@drawable/vector_compose_dm_shortcut"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="289dp" />

    <ImageButton
        android:id="@+id/btnRetweet"
        android:layout_width="78dp"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:layout_marginStart="115dp"
        app:srcCompat="@drawable/ic_vector_retweet_stroke"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="289dp" />
</RelativeLayout>